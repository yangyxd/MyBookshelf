<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <View
        android:id="@+id/vw_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_cover_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/img_cover"
            android:src="@drawable/img_cover_gs" />

        <View
            android:background="#2f000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#efffffff"
                android:elevation="8.0dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_desc"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#afffffff"
                android:elevation="8.0dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#5f7f7f7f"
            app:cardElevation="16dp"
            app:cardCornerRadius="123dp"
            app:contentPadding="8dp"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_cover"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:contentDescription="@string/img_cover"
                android:src="@drawable/img_cover_default"
                app:civ_border_color="@color/ate_control_disabled_light"
                app:civ_border_width="1px"
                android:transformPivotX="115dp"
                android:transformPivotY="115dp"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="36dp"
        android:padding="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="24dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/tv_dur_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:ignore="RtlSymmetry" />

            <com.kunfei.bookshelf.widget.views.ATESeekBar
                app:tint="#efffffff"
                android:id="@+id/player_progress"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_all_time"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_timer"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_ib_pre_round"
                android:contentDescription="@string/set_timer"
                android:tint="@drawable/selector_paly_btn"
                android:src="@drawable/ic_timer_black_24dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_skip_previous"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_ib_pre_round"
                android:contentDescription="@string/skip_previous"
                android:tint="@drawable/selector_paly_btn"
                android:src="@drawable/ic_skip_previous" />

            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tvOther"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/custom_mr"
                    android:tooltipText="@string/custom_mr"
                    android:src="@color/transparent"
                    app:civ_border_color="@color/background_menu"
                    app:civ_border_width="4dp"
                    tools:ignore="HardcodedText" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/fab_play_stop"
                    android:contentDescription="@string/read_aloud"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    android:src="@drawable/ic_play_24dp"
                    app:tint="@drawable/selector_paly_btn"
                    tools:ignore="NestedWeights" />

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_skip_next"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_ib_pre_round"
                android:contentDescription="@string/skip_next"
                android:tint="@drawable/selector_paly_btn"
                android:src="@drawable/ic_skip_next" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_chapter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="2dp"
                android:background="@drawable/bg_ib_pre_round"
                android:tint="@drawable/selector_paly_btn"
                android:src="@drawable/ic_chapter_list"
                android:contentDescription="@string/chapter_list" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>